

@{
    ViewBag.Title = "Aluno";
}

<h2>Aluno</h2>


    @Html.AntiForgeryToken()
    
<form>
    <div class="form-group">
        <label for="exampleInputEmail1">Aluno</label>
        <input type="email" class="form-control" id="Nome" aria-describedby="emailHelp" placeholder="Nome do Aluno">

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Disciplina</label>
        <input type="text" class="form-control" id="Disciplina" placeholder="Disciplina">
    </div>
    <a href="#" onclick="SalvarAluno();" class="btn btn-default">Salvar Pedido</a>
</form>


<div id="divItens" style="display:none;">


</div>

<script>
    function SalvarAluno() {
        var Nome = $("#Nome").val();
        var Disciplina = $("#Disciplina").val();
        $.ajax({
            type: "POST",
            url: "http://localhost:54828/Home/Create",
            data: JSON.stringify({ Nome: Nome, Disciplina: Disciplina }),
            contentType: "application/json"


        });


    }
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
